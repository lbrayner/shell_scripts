#!/usr/bin/env bash

# set -x

folder="/tmp/$(basename "${0}" | base64)"

[[ -d "${folder}" ]] || mkdir "${folder}"

name=nvim-linux-x86_64.tar.gz
file="${folder}/${name}"

zflag=()

[[ -e "${file}" ]] && zflag=(-z "${file}")

curl -L "${zflag[@]}" -o "${file}" \
  https://github.com/neovim/neovim/releases/download/nightly/${name}

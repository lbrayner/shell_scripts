#!/usr/bin/env bash

# set -x

print_usage() {
	printf '\n%s\n' "$(basename "${0}") [DIR]"
}

vim_bundle(){
    find "${1}" ! -path \*/.\* ! -path ./pack/\* \
        ! -path ./eclim/\* ! -path ./swap/\* ! -path ./backup/\* \
        ! -path ./ctrlp_cache/\* \
        ! -name \*.sw\* \
        -type f
}

emacs_bundle(){
    find "${1}" ! -path \*/.\* ! -path ./elpa/\* \
        ! -path ./github/\* ! -path ./auto-save-list/\* ! -name abbrev_defs \
        ! -name srecode-map.el ! -name bookmarks -type f
}

eclipse_project(){
    find "${1}" ! -path \*/.\* ! -path ./classes/\* ! -path ./build/\* \
        ! -path ./dumps/\* ! -path ./bin/\* ! -path ./test-classes/\* \
        ! -path ./target/\* ! -iname \*.class ! -iname \*.jasper \
        -type f
}

maven_project(){
    eclipse_project "${1}"
}

gradle_project(){
    eclipse_project "${1}"
}

wildfly_home(){
    find "${1}" ! -path \*/.\* ! -path ./standalone/data/\* \
        ! -path ./standalone/standalone_xml_history/\* \
        ! -path ./standalone/tmp/\* \
        -type f
}

dir="."

if [[ ! ${#} -le 1  ]]
then
    print_usage >&2
    exit 1
fi

if [[ -n "${1}" ]]
then
    dir="${1}"
fi

if [[ -f ./init.vim ]]
then
    vim_bundle "${dir}"
    exit 0
fi

if [[ -f ./init.el ]]
then
    emacs_bundle "${dir}"
    exit 0
fi

if [[ -f ./.project ]]
then
    eclipse_project "${dir}"
    exit 0
fi

if [[ -f ./pom.xml ]]
then
    maven_project "${dir}"
    exit 0
fi

if ls *.gradle >/dev/null 2>&1
then
    gradle_project "${dir}"
    exit 0
fi

if [[ -f ./standalone/configuration/standalone.xml ]]
then
    wildfly_home "${dir}"
    exit 0
fi

exit 1

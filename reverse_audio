#!/usr/bin/env bash

set -x

print_usage() {
	printf '\n%s\n' "$(basename $0) FILE..."
}

if [[ ! ${#} -gt 0 ]]
then
    print_usage
    exit 1
fi

while [[ -n "${1}" ]]
do
    file="${1}"
    extension="${file##*.}"
    name="${file%.*}"

    shift

    if [[ ! "${extension}" = "mp3" ]] && [[ ! "${extension}" = "m4a" ]] \
        && [[ ! "${extension}" = "ogg" ]]
    then
        printf 'Format "%s" not supported. Skipping.\n' "${extension}" 1>&2
        continue
    fi

    wav=`mktemp --suffix=.wav -p "${PWD}"`
    vaw=`mktemp --suffix=.wav -p "${PWD}"`

    ffmpeg -v quiet -y -i "${file}" "${wav}"
    sox "${wav}" "${vaw}" reverse

    reverse="`reverse-string "${name}"`"

    if [[ "${extension}" = "mp3" ]]
    then
        ffmpeg -v quiet -y -i "${vaw}" -vn -acodec libmp3lame -ab 128k "${reverse}.mp3"
    fi

    if [[ "${extension}" = "m4a" ]]
    then
        ffmpeg -v quiet -y -i "${vaw}" -vn -acodec aac -ab 128k "${reverse}.m4a"
    fi

    if [[ "${extension}" = "ogg" ]]
    then
        ffmpeg -v quiet -y -i "${vaw}" -vn -acodec libvorbis -qscale:a 5 "${reverse}.ogg"
    fi

    rm "${wav}" "${vaw}"
done

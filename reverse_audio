#!/usr/bin/env bash

# set -x

if [[ ${BASH_VERSION} != 4.* ]]
then
    echo "bash version >= 4.0 required." 1>&2
    exit 1
fi

print_usage() {
	printf '\n%s\n' "$(basename $0) FILE..."
}

if [[ ! ${#} -gt 0 ]]
then
    print_usage
    exit 1
fi

while [[ -n "${1}" ]]
do
    file="${1}"
    extension_as_is="${file##*.}"
    extension="${extension_as_is,,}" # lower case
    directory="${file%/*}"
    name_with_extension="${file##*/}"
    name="${name_with_extension%.*}"

    shift

    if [[ ! "${extension}" == "mp3" ]] \
        && [[ ! "${extension}" == "m4a" ]] \
        && [[ ! "${extension}" == "ogg" ]]
    then
        printf 'Format "%s" not supported. Skipping.\n' "${extension}" 1>&2
        continue
    fi

    wav=`mktemp --suffix=.wav -p "${PWD}"`
    vaw=`mktemp --suffix=.wav -p "${PWD}"`

    ffmpeg -y -i "${file}" "${wav}"
    sox "${wav}" "${vaw}" reverse

    reverse_name="`reverse-string "${name}"`"

    reverse="${reverse_name}"

    if [[ ! "${file}" == "${directory}" ]]
    then
        reverse="${directory}/${reverse_name}"
    fi

    if [[ "${extension}" == "mp3" ]]
    then
        ffmpeg -y -i "${vaw}" -vn -acodec libmp3lame -ab 128k "${reverse}.mp3"
    fi

    if [[ "${extension}" == "m4a" ]]
    then
        ffmpeg -y -i "${vaw}" -vn -acodec aac -ab 128k "${reverse}.m4a"
    fi

    if [[ "${extension}" == "ogg" ]]
    then
        ffmpeg -y -i "${vaw}" -vn -acodec libvorbis -qscale:a 5 "${reverse}.ogg"
    fi

    rm "${wav}" "${vaw}"
done

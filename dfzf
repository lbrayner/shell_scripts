#!/usr/bin/env bash

# set -x

print_usage() {
	printf '\n%s\n' "$(basename "${0}") [-C] [-c CACHE_DIR] [DIR]"
}

clear_cache=""
cache_dir=~/.cache/fzf_cache
dir="."
while getopts ":hCc:" opt
do
    case ${opt} in
        h)
            print_usage
            exit 0
            ;;
        C)
            clear_cache="true"
            ;;
        c)
            cache_dir="${OPTARG}"
            ;;
        \?)
            echo "Invalid option: -$OPTARG" >&2
            exit 1
            ;;
    esac
done
shift $((OPTIND - 1))

if [[ ! ${#} -le 1  ]]
then
    print_usage >&2
    exit 1
fi

list_files(){
    find "${1}" ! -path \*/.\* -type f \
        ! -iname \*.o \
        ! -iname \*.lo \
        ! -iname \*.exe \
        ! -iname \*.bin
}


if [[ -n "${1}" ]]
then
    dir="${1}"
fi

if [[ ! -d "${cache_dir}"  ]]
then
    mkdir -p "${cache_dir}"
fi

cache_file="${cache_dir}/`printf $(readlink -f "${dir}") | base64`"

if [[ -n "${clear_cache}" ]] && [[ -f "${cache_file}" ]]
then
    rm "${cache_file}"
fi

if [[ ! -f "${cache_file}" ]]
then
    if [[ -z "${DFZF_DEFAULT_COMMAND}" ]] || \
        ! ${DFZF_DEFAULT_COMMAND} "${dir}" > "${cache_file}"
    then
        list_files "${dir}" > "${cache_file}"
    fi
fi

cat "${cache_file}"
